    <ScrollView>
        <StackLayout Margin="20" Orientation="Vertical">
            <Button Text="Take Photo and Recognise" Clicked="loadCamera" TextColor="White" BackgroundColor="Red" />
            <Image x:Name="image" Aspect="AspectFit"/>
            <StackLayout Orientation="Horizontal">
                <Label x:Name="TagLabel">
                </Label>
                <Label x:Name="PredictionLabel">
                </Label>
            </StackLayout>
            <StackLayout Orientation="Vertical" x:Name="buttons">
            </StackLayout>
    </StackLayout>
    </ScrollView>
</ContentPage>